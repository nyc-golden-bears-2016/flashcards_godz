<h1>Choose wisely, <%= current_user.username %>!!!!</h1>

<% if session[:answer] %>
  <span><%= session[:answer] %></span>
<% end %>

<main role="main">
  <ul class="entries-list no-bullets no-padding">
      <li class="entry-item pad-b-4">
        <p class="entry-title font-2 pad-b-1-4 c-white"><%= @card.question %></p>
      </li>
  </ul>

  <form method="post" action="/decks/<%= @deck.id %>/cards/<%= @card.id %>">


  <input id="username-input" name="user_answer" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <input type="submit" value="Answer if you dare" tabindex="3" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>

</main>
